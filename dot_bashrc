# shellcheck disable=SC2111
function pvcp()
{
    if [ $# != 2 ]
    then
        echo "Usage: $0 arg1 arg2"
        return 255
    fi
    SOURCE=$1

    if [ -d "$2" ]
    then
        DESTINATION="$2/$(basename "$SOURCE")"
    else
        DESTINATION="$2"
    fi

    echo pv "${SOURCE}" \| cat \> "${DESTINATION}"
    pv "${SOURCE}" | cat > "${DESTINATION}"
}

